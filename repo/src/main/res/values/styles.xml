<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardStyle" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CardHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/corporate_black_400</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardDescriptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/corporate_black_400</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardLinkStyle" parent="Widget.AppCompat.TextView">
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_default</item>
        <item name="android:paddingTop">@dimen/margin_vertical_default</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_default</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_default</item>
        <item name="android:textColor">@color/havelock_blue</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/careful_blue_50</item>
    </style>
</resources>
